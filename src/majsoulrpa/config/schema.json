{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ConfigFileValidation",
    "description": "Schema for validating config file",
    "type": "object",
    "oneOf": [
        {
            "$ref": "#/definitions/single_config_schema"
        },
        {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/list_config_schema"
            }
        }
    ],
    "definitions": {
        "authentication": {
            "oneOf": [
                {
                    "required": [
                        "email_address"
                    ],
                    "properties": {
                        "email_address": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "$ref": "authentication_imap.json"
                },
                {
                    "$ref": "authentication_s3.json"
                }
            ]
        },
        "single_config_schema": {
            "type": "object",
            "required": [
                "authentication"
            ],
            "proprties": {
                "authentication": {
                    "$ref": "#/definitions/authentication"
                },
                "port": {
                    "$ref": "port.json"
                },
                "browser": {
                    "$ref": "browser.json"
                }
            },
            "additionalProperties": true
        },
        "list_config_schema": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "authentication"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "authentication": {
                        "$ref": "#/definitions/authentication"
                    },
                    "port": {
                        "$ref": "port.json"
                    },
                    "browser": {
                        "$ref": "browser.json"
                    }
                },
                "additionalProperties": true
            }
        }
    }
}